@model FeroTech.Infrastructure.Application.DTOs.QRCodeDto

@{
    ViewData["Title"] = "Create QR Code";
}

<h2>Create QR Code</h2>
<hr />

<form asp-action="Create" method="post">
    <div class="row">
        <div class="col-md-6 mb-3">
            <label class="form-label">Select Asset</label>
            <select asp-for="Quantity" class="form-control">
                <option value="">-- Select Asset --</option>
                <option value="Keyboard">Keyboard</option>
                <option value="Mouse">Mouse</option>
                <option value="Camera">Camera</option>
            </select>
            @* <select asp-for="AssetId" asp-items="ViewBag.Assets" class="form-select">
                //<option value="">-- Select Asset --</option>
            </select> *@
            <span asp-validation-for="AssetId" class="text-danger"></span>
        </div>



        <div class="col-md-6 mb-3">
            <label class="form-label">QR Code Value</label>
            <input asp-for="QRCodeValue" class="form-control" placeholder="Enter QR code value" />
            <span asp-validation-for="QRCodeValue" class="text-danger"></span>
        </div>

        <div class="col-md-6 mb-3">
            <label class="form-label">Quantity</label>
            <input asp-for="Quantity" type="number" class="form-control" placeholder="Enter quantity" />
            <span asp-validation-for="Quantity" class="text-danger"></span>
        </div>

        <div class="col-md-6 mb-3">
            <div class="form-check mt-4">
                <input asp-for="IsPrinted" class="form-check-input" type="checkbox" />
                <label class="form-check-label">Is Printed?</label>
            </div>
            <span asp-validation-for="IsPrinted" class="text-danger"></span>
        </div>

        <div class="col-md-12 mb-3">
            <label class="form-label">Notes</label>
            <textarea asp-for="Notes" class="form-control" placeholder="Add any notes here"></textarea>
            <span asp-validation-for="Notes" class="text-danger"></span>
        </div>

        <div class="col-md-12 text-end">
            <button type="submit" class="btn btn-primary">Save</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
