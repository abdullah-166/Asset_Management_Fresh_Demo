@model FeroTech.Infrastructure.Domain.Entities.DistributedAsset
@{
    ViewData["Title"] = "Edit Distributed Asset";
}

<h2 class="mb-4">Edit Assigned Asset</h2>

<form asp-action="Edit" method="post" class="p-4 border rounded shadow-sm bg-light">
    <input type="hidden" asp-for="DistributedAssetId" />

    <div class="row mb-3">
        <div class="col-md-6">
            <label class="form-label">Employee ID</label>
            <input asp-for="EmployeeId" class="form-control" readonly />
        </div>

        <div class="col-md-6">
            <label class="form-label">Asset ID</label>
            <input asp-for="AssetId" class="form-control" readonly />
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-md-6">
            <label class="form-label">QR Code Value</label>
            <input asp-for="QRCodeValue" class="form-control" readonly />
        </div>

        <div class="col-md-3">
            <label class="form-label">Assigned Date</label>
            <input asp-for="AssignedDate" type="date" class="form-control" />
        </div>

        <div class="col-md-3">
            <label class="form-label">End Date</label>
            <input asp-for="EndDate" type="date" class="form-control" />
        </div>
    </div>

    <div class="mb-3">
        <label class="form-label">Notes</label>
        <textarea asp-for="Notes" class="form-control" rows="2"></textarea>
    </div>

    <div class="d-flex justify-content-between mt-4">
        <a asp-action="Index" class="btn btn-secondary">Back</a>
        <button type="submit" class="btn btn-primary">Save Changes</button>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
