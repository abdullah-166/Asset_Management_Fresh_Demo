@model FeroTech.Infrastructure.Domain.Entities.DistributedAsset
@{
    ViewData["Title"] = "Assign Asset";
    var assetList = ViewBag.AssetList as IEnumerable<FeroTech.Infrastructure.Domain.Entities.Asset>;
    var employeeList = ViewBag.EmployeeList as IEnumerable<FeroTech.Infrastructure.Domain.Entities.Employee>;
}

<h2 class="mb-4">Assign Asset to Employee</h2>

<form asp-action="Create" method="post" class="p-4 border rounded shadow-sm bg-light">
    <div class="row mb-3">
        <div class="col-md-6">
            <label class="form-label">Employee</label>
            <select asp-for="EmployeeId" class="form-select" required>
                <option value="">-- Select Employee --</option>
                @foreach (var emp in employeeList)
                {
                    <option value="@emp.EmployeeId">@emp.FullName — @emp.EmployeeId</option>
                }
            </select>
            <span asp-validation-for="EmployeeId" class="text-danger"></span>
        </div>
        
        <div class="col-md-6">
            <label class="form-label">Product</label>
            <select asp-for="AssetId" class="form-select" required>
                <option value="">-- Select Product --</option>
                @foreach (var item in assetList)
                {
                    <option value="@item.AssetId">@item.Brand @item.Modell</option>
                }
            </select>
            <span asp-validation-for="AssetId" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-md-6">
            <label class="form-label">QR Code Value</label>
            <input asp-for="QRCodeValue" class="form-control" placeholder="Enter QR Code Value" required />
            <span asp-validation-for="QRCodeValue" class="text-danger"></span>
        </div>

        <div class="col-md-3">
            <label class="form-label">Assign Date</label>
            <input asp-for="AssignedDate" type="date" class="form-control" required />
        </div>

        <div class="col-md-3">
            <label class="form-label">End Date</label>
            <input asp-for="EndDate" type="date" class="form-control" />
        </div>
    </div>

    <div class="mb-3">
        <label class="form-label">Notes</label>
        <textarea asp-for="Notes" class="form-control" rows="2"></textarea>
    </div>

    <div class="d-flex justify-content-between mt-4">
        <a asp-action="Index" class="btn btn-secondary">Back</a>
        <button type="submit" class="btn btn-success">Assign Asset</button>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
