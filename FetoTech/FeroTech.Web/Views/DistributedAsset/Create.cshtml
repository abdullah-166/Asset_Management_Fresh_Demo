@model FeroTech.Infrastructure.Application.DTOs.DistributedAssetDto

@{
    ViewData["Title"] = "Assign Asset";
}

<h2>Assign Asset</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="AssetId">Select Asset</label>
        <select asp-for="AssetId" class="form-control"
                asp-items="@(new SelectList(ViewBag.AvailableAssets, "AssetId", "AssetId"))">
            <option value="">-- Select Asset --</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="AssignedToUserId">Assign To</label>
        <select asp-for="AssignedToUserId" class="form-control"
                asp-items="@(new SelectList(ViewBag.ActiveEmployees, "EmployeeId", "FullName"))">
            <option value="">-- Select Employee --</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="AssignedAt"></label>
        <input asp-for="AssignedAt" type="date" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="QRCodeValue"></label>
        <input asp-for="QRCodeValue" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Notes"></label>
        <textarea asp-for="Notes" class="form-control"></textarea>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Save</button>
</form>
