@model IEnumerable<FeroTech.Infrastructure.Domain.Entities.DistributedAsset>

@{
    ViewData["Title"] = "Distributed Assets";
}

<h2 class="mb-3">Distributed Assets</h2>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success">@TempData["Message"]</div>
}

<!-- 🔍 Search Bar -->
<form method="get" asp-action="Index" class="mb-4">
    <div class="input-group">
        <input type="text" name="searchQuery" value="@ViewBag.SearchQuery" class="form-control" placeholder="Search by Employee ID, Product ID, or QR Code..." />
        <button type="submit" class="btn btn-primary">Search</button>
        <a asp-action="Index" class="btn btn-outline-secondary">Clear</a>
    </div>
</form>

<!-- ➕ Create Button -->
<p>
    <a asp-action="Create" class="btn btn-success">Assign New Asset</a>
</p>

<!-- 📋 Table -->
<table class="table table-bordered table-hover table-striped">
    <thead class="table-light">
        <tr>
            <th>Employee ID</th>
            <th>Asset ID</th>
            <th>QR Code</th>
            <th>Assigned Date</th>
            <th>End Date</th>
            <th>Notes</th>
            <th style="width: 160px;">Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.EmployeeId</td>
                    <td>@item.AssetId</td>
                    <td>@item.QRCodeValue</td>
                    <td>@item.AssignedDate.ToShortDateString()</td>
                    <td>@item.EndDate?.ToShortDateString()</td>
                    <td>@item.Notes</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.DistributedAssetId" class="btn btn-sm btn-warning">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.DistributedAssetId" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this record?');">Delete</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="7" class="text-center text-muted">No records found.</td>
            </tr>
        }
    </tbody>
</table>
