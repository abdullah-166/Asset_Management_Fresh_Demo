@model FeroTech.Infrastructure.Application.DTOs.AssetDto

@{
    ViewData["Title"] = "Create Asset";
}

<h2>Create Asset</h2>

<hr />

<form asp-action="AssetCreate" method="post">
    <div class="row">
        @* <div class="col-md-6 mb-3">
            <label class="form-label">Asset Tag</label>
            <input asp-for="AssetTag" class="form-control" />
        </div> *@

        @* <div class="col-md-6 mb-3">
            <label class="form-label">Name</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div> *@

        <div class="col-md-6 mb-3">
            <label class="form-label">Select a Category:</label>
            <select asp-for="Category" class="form-control">
                <option value="Keyboard">Keyboard</option>
                <option value="Mouse">Mouse</option>
                <option value="Camera">Camera</option>
            </select>
        </div>

        <div class="col-md-6 mb-3">
            <label class="form-label">Brand</label>
            <input asp-for="Brand" class="form-control" />
            <span asp-validation-for="Brand" class="text-danger"></span>
        </div>

        <div class="col-md-6 mb-3">
            <label class="form-label">Model</label>
            <input asp-for="Modell" class="form-control" />
            <span asp-validation-for="Modell" class="text-danger"></span>
        </div>

        <div class="col-md-6 mb-3">
            <label class="form-label">Purchase Date</label>
            <input asp-for="PurchaseDate" type="date" class="form-control" />
        </div>

        <div class="col-md-6 mb-3">
            <label class="form-label">Purchase Order No</label>
            <input asp-for="PurchaseOrderNo" class="form-control" />
        </div>

        <div class="col-md-6 mb-3">
            <label class="form-label">Supplier</label>
            <input asp-for="Supplier" class="form-control" />
            <span asp-validation-for="Supplier" class="text-danger"></span>
        </div>

        <div class="col-md-6 mb-3">
            <label class="form-label">Purchase Price</label>
            <input asp-for="PurchasePrice" class="form-control" />
            <span asp-validation-for="PurchasePrice" class="text-danger"></span>
        </div>

        <div class="col-md-6 mb-3">
            <label class="form-label">Warranty End Date</label>
            <input asp-for="WarrantyEndDate" type="date" class="form-control" />
            <span asp-validation-for="WarrantyEndDate" class="text-danger"></span>
        </div>

        @* <div class="col-md-6 mb-3">
            <label class="form-label">Location</label>
            <input asp-for="Location" class="form-control" />
            <span asp-validation-for="Location" class="text-danger"></span>
        </div> *@

        <div class="col-md-6 mb-3">
            <label class="form-label">Status</label>
            <select asp-for="Status" class="form-select">
                <option value="Available">Available</option>
                <option value="Assigned">Assigned</option>
                <option value="UnderMaintenance">Under Maintenance</option>
                <option value="Retired">Retired</option>
            </select>
            <span asp-validation-for="Status" class="text-danger"></span>
        </div>

        <div class="col-md-12 mb-3">
            <label class="form-label">Notes</label>
            <textarea asp-for="Notes" class="form-control"></textarea>
            <span asp-validation-for="Notes" class="text-danger"></span>
        </div>

        <div class="col-md-12 text-end">
            <button type="submit" class="btn btn-primary">Save</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </div>
</form>
